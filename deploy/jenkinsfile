pipeline {
    agent any

  stages {

     stage("Initial cleanup") {
          steps {
            dir("${WORKSPACE}") {
              deleteDir()
            }
          }
        }

    stage('Checkout SCM') {
      steps {
            git branch: 'main', url: 'https://github.com/jaymineh/Todo.git'
      }
    }

    stage('Prepare Dependencies') {
      steps {
            sudo sh 'mv .env.sample .env'
            sudo sh 'composer install'
            sudo sh 'php artisan migrate'
            sudo sh 'php artisan db:seed'
            sudo sh 'php artisan key:generate'
      }
    }
  }
}